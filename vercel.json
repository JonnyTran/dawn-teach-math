{
    "version": 2,
    "builds": [
        { 
            "src": "/api/index.py", 
            "use": "@vercel/python", 
            "config": { 
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "rewrites": [
        { "source": "/api/:path*", "destination": "/api/index.py" },
        { "source": "/(.*)", "destination": "" }
    ]
}