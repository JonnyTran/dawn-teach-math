{
    "version": 2,
    "builds": [
        { 
            "src": "/api/index.py", 
            "use": "@vercel/python", 
            "config": { 
                "maxLambdaSize": "15mb",
                "cmd": "uvicorn api.index:app --host 0.0.0.0 --port 8000"
            }
        }
    ],
    "rewrites": [
        { "source": "/api/:path*", "destination": "api/index.py" }
    ]
}