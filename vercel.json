{
    "builds": [
        { 
            "src": "/api/index.py", 
            "use": "@vercel/python", 
            "config": { 
                "maxLambdaSize": "100mb"
            }
        }
    ],
    "rewrites": [
        { 
            "source": "/api/:path*", 
            "destination": "/api/:path*"
        }
    ]
}