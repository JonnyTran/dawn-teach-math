{
    "version": 2,
    "public": false,
    "devCommand": "npm run dev",
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
              "distDir": "dist"
            }
        },
        { 
            "src": "/api/index.py", 
            "use": "@vercel/python"
        },
        { 
            "src": "/api/llm.py", 
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        { "source": "/api/(.*)", "destination": "api/index.py" },
	    { "source": "/docs", "destination": "api/index.py" },
		{ "source": "/openapi.json", "destination": "api/index.py" },
        { "source": "/(.*)", "destination": ""}
	]
}