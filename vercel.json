{
    "version": 2,
    "builds": [
        { 
            "src": "/api/index.py", 
            "use": "@vercel/python", 
            "config": { 
                "maxLambdaSize": "15mb",
                "cmd": "python3 -m uvicorn api.index:app --host 0.0.0.0 --port $PORT"
            }
        }
    ],
    "rewrites": [
        { "source": "/api/:path*", "destination": "/api/index.py" },
        { "source": "/(.*)", "destination": "" }
    ]
}